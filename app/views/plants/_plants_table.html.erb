<table id="plants_table" class="table table-bordered table-striped">
  <thead >
    <tr>
      <th>Common Name</th>
      <th>Genus species</th>
      <% if current_user %>
        <th></th>
        <% if current_user.admin? %>
          <th></th>
        <% end %>
      <% end %>
    </tr>
  </thead>
  <tbody id="plantIndex">
