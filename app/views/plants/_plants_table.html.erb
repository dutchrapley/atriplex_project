</table>
<% content_for :custom_js do %>
  <script type="text/javascript" charset="utf-8">
    var plants = new Plants();
    plants.reset(<%= raw(@plants.to_json) %>);
  </script>

  <% if current_user.blank? %>
    <style type="text/css" media="all">
      .edit-plant{display: none;}
    </style>
  <% end -%>
<% end -%>
